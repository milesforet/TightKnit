<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        
    </head>
    
    <body>
        <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #ccffcc;">
            <ul class="navbar-nav">
                <li class="nav-item" style="padding-left: 20px; padding-right: 20px;">
                    <a class="nav-link" href="/home">Home</a>
                </li>

                <li class="nav-item" style="padding-left: 20px; padding-right: 20px;">
                    <a class="nav-link" href="/group">Group</a>
                </li>

                <li class="nav-item" style="padding-left: 20px; padding-right: 20px;">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>

                <li class="nav-item" style="padding-left: 20px; padding-right: 20px;">
                    <a class="nav-link" href="/settings">Settings</a>
                </li>
                <li class="nav-item" style="padding-left: 20px; padding-right: 20px;">
                    <a class="nav-link" href="/logout">Log-Out</a>
                  </li>
            </ul>
        </nav>
        <br>
                <div>
                    <div class="container" style="max-width: 60%">
                        <div class="border rounded" style="background-color: #FFFAFA">
                            <div class="p-2 row">
                                <div class="col-2">
                                    <img class="rounded-circle" src="<%=original[0].ProfilePicture%>" style="max-width: 100%">
                                </div>
                                <div class="col-10">
                                    <h4><%=posts[0].FullName %></h4>
                                    <p>
                                        <%=posts[0].PostContent %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (posts[0].CommentID) { %>

                        <% posts.forEach((post)=>{ %>
                            <br>
                            <div class="container" style="max-width: 50%">
                                <div class="border rounded" style="background-color: #FFFAFA">
                                    <div class="p-2 row">
                                        <div class="col-2">
                                            <img class="rounded-circle" src="<%=post.ProfilePicture%>" style="max-width: 100%">
                                        </div>
                                        <div class="col-10">
                                            <h4><%=post.FirstName%> <%=post.LastName%></h4>
                                            <p>
                                            <%=post.CommentContent %>
                                            </p>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        <% })%>
                    <% } %>
                </div>

                <br>

                <div class="container text-center" style="max-width: 50%">
                    <div>
                        <div>
                            <form action="/do-comment" method="POST" role="form">
                                <input type='hidden' name="PostID" value="<%= posts[0].PostID %>" />
                                <textarea class="form-control" id="name" name='addComment'  rows='3' required></textarea>
                                <br>
                                <input type="submit" class="form-control" style="background-color: #0d2157; color:#ffffff" value="Comment">
                            </form>
                        </div>
                    </div>
                </div>
            
        
    </body>
</html>